@model List<E_Commerce_WebSite.Models.Order> 

                          <!-- Single Page Header start -->
        <div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Cart</h1>
            
        </div>
        <!-- Single Page Header End -->

@{
    int counter = 1;


    String setString(String s,int counter){

        return s + counter;
    }
}



                      <div class="col-lg-9">
                                <div class="row g-4 justify-content-center products">
                                   
                                  @foreach(var order in Model){
                                   
                                    <div class="col-md-6 col-lg-6 col-xl-4">
                                        <div class="rounded position-relative fruite-item">
                                            
                                            <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                <h4>OrderId:@order.Id</h4>
                                                 <h4>OrderDate:@order.Order_Date</h4>
                                                 <h4>Total_Price:@order.totalAmount</h4>

                                                <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#@setString("exampleModal",counter)">show Order Item</button>
                                                         @if(!order.isAccept){
                                                         <a href="/OrderItem/Accept/@order.Id" class="btn btn-outline-primary">Accept</a>
                                                         }else if(!order.isDeliver){
                                                           
                                                           <a href="/OrderItem/Deliver/@order.Id" class="btn btn-outline-primary">Deliver</a>
                                                         }else{
                                                         <div class="btn btn-outline-primary">Delivered</div>
                                                         }
                                                         
                                                        <!-- Modal -->
<div class="modal fade" id="@setString("exampleModal",@counter)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
       <div class="modal-body">
       <div class="container mt-5">
    <h2 class="text-center mb-4">Order Items</h2>
    @if (Model!=null)
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                   
                    <th>Name</th>
                    <th>Quantity</th>
                  
                    <th>Total Price</th>
                   
                </tr>
            </thead>
            <tbody>

                @if(order.orderItems!=null){
             @foreach (var item in order.orderItems)
            {
                <tr>
                    <td>
                        @item.product.Name
                    </td>
                     <td>
                        @item.Quantity
                    </td>
                     <td>
                        @item.total_price
                    </td>

                </tr>
            }
                } else
    {
        <div class="alert alert-warning text-center" role="alert">
            There are no products added to this order.
        </div>
    }
            </tbody>
        </table>
    }
   
</div>
        </div>
     
    </div>
  </div>

   </div>
    


                                                </div>
                                            </div>
                                        </div>
            </div>



            counter++;

                              }
                                  
                                   
                                 
                                   
                                 
                                
                                 
                                    <div class="col-12">
                                        <div class="pagination d-flex justify-content-center mt-5">
                                            <a href="#" class="rounded">&laquo;</a>
                                            <a href="#" class="active rounded">1</a>
                                            <a href="#" class="rounded">2</a>
                                            <a href="#" class="rounded">3</a>
                                            <a href="#" class="rounded">4</a>
                                            <a href="#" class="rounded">5</a>
                                            <a href="#" class="rounded">6</a>
                                            <a href="#" class="rounded">&raquo;</a>
                                        </div>
                                    </div>
                                </div>
                         </div>



