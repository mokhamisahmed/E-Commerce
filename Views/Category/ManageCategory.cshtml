@model E_Commerce_WebSite.ViewModel.CategoryViewModel
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Category</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
       <div class="modal-body">
        <form id="CreateForm" asp-action="AddCategory" >
          <input type="hidden" id="categoryId" name="Id">
          <div class="mb-3">
            <label for="categoryName" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="categoryName" name="Name">
          </div>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
        </div>
     
    </div>
  </div>
</div>


   <!-- Single Page Header start -->
        <div class="container-fluid page-header py-5">
            <h1 class="text-center text-white display-6">Cart</h1>
            
        </div>
        <!-- Single Page Header End -->

         <!-- Button trigger modal -->
<div class="container mt-5">
    <div class="text-center"> <!-- مركز الزر داخل هذا العنصر -->
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Add Category</button>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Category Data</h2>
    @if (Model.categories.Count != 0)
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.categories)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            <button type="button" class="btn btn-outline-primary btn-sm edit-btn" data-toggle="modal" data-target="#editModal" data-id="@category.Id" data-name="@category.Name">Edit</button>
                            <button type="button" class="btn btn-outline-danger btn-sm delete-btn" data-toggle="modal" data-target="#deleteModal" data-id="@category.Id">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            There are no categories available.
        </div>
    }
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Category</h5>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editForm" asp-action="Edit" enctype="multipart/form-data">
          <input type="hidden" id="categoryId" name="Id">
          <div class="mb-3">
            <label for="categoryName" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="categoryName" name="Name">
          </div>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Category</h5>
        <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="deleteForm" asp-action="Delete" enctype="multipart/form-data">
          <input type="hidden" id="deleteCategoryId" name="id">
          <div class="alert alert-danger" role="alert">
            Are you sure you want to delete this category?
          </div>
          <button type="submit" class="btn btn-danger">Yes</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript Libraries -->
